
@model List<CourseManagement_Model.ViewModel.AssignmentModel>
<div class="container mt-3">

   @* <div class="d-flex">
        <a class="btn btn-success btn-sm" href="CreateAssignment">
            Create Assignment
        </a>
    </div>*@
    <div class="card mt-3">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <td>Title</td>
                        <td>Desription</td>
                        <td>Date</td>
                        <td>Complete Assignment</td>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.DueDate.ToString().Split(' ')[0]</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
