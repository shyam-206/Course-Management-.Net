@model List<CourseManagement_Model.ViewModel.CourseModel>
<style>
    body {
        background-color: #f8f9fa;
    }
    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }
    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .btn-disabled {
        background-color: #6c757d;
        border-color: #6c757d;
        cursor: not-allowed;
    }
</style>
<div class="container mt-5">
    <div class="card mt-3">
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="table-primary">
                    <tr>
                        <td>Title</td>
                        <td>Description</td>
                        <td>Action</td>
                        <td>Material</td>
                        <td>Assignment List</td>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {

                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Description</td>

                                @if (item.IsEnrollment != true)
                                {
                                    <td>
                                        <a href="~/Student/EnrollCourse?CourseId=@item.CourseId" class="btn btn-outline-success btn-sm">Enroll course</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-info btn-sm">Not Available</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-info btn-sm">Not Available</a>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <a class="btn btn-outline-primary btn-sm" disabled>Already Enroll</a>
                                    </td>
                                    <td>
                                        <a href="~/Student/ViewMaterial?CourseId=@item.CourseId" class="btn btn-warning btn-sm">View Material</a>
                                    </td>
                                    <td>
                                        <a href="~/Student/AssignmentList?CourseId=@item.CourseId" class="btn btn-warning btn-sm">Assignments</a>
                                    </td>
                                }
                            </tr>
                        }

                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

