@model List<CourseManagement_Model.ViewModel.MaterialModel>
<style>
    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .btn-disabled {
        background-color: #6c757d;
        border-color: #6c757d;
        cursor: not-allowed;
    }
</style>
<div class="container mt-2">
    <div class="card">
        <div class="m-2 p-2">
            <a class="rounded-4 border-5 bg-primary-subtle px-2 py-1" href="Index"><i class="fa-solid fa-arrow-left"></i></a>
        </div>
        @if (Model == null || Model.Count() <= 0)
        {

            <div class="d-flex justify-content-center m-3 p-3 align-items-center">
                <p class="fw-bold fs-2 text-secondary">No Record Found...</p>
            </div>}
        else
        {

            <div class="card-body">

                <table class="table table-bordered table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>Course Name</th>
                            <th>Material Name</th>
                            <th>File Name</th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CourseTitle</td>
                                <td>@item.Title</td>
                                <td>
                                    @foreach (var file in item.Files)
                                    {

                                        <a href="~/Admin/ViewMaterial?file=@file" class="mx-2">@file</a>

                                    }
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                
            </div>
        }

    </div>
</div>
