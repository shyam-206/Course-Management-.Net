<style>
    body {
        background-color: #f0f2f5;
        font-family: Arial, sans-serif;
    }

    .card-custom {
        border-radius: 0.75rem;
        background-color: #ffffff;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        border-left: 0.25rem solid transparent;
    }

    .card-custom:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .border-left-primary {
        border-left-color: #6c757d;
        background-color: #d1e7ff;
    }

    .border-left-success {
        border-left-color: #28a745;
        background-color: #d4edda;
    }

    .border-left-info {
        border-left-color: #17a2b8;
        background-color: #d1ecf1;
    }

    .border-left-warning {
        border-left-color: #ffc107;
        background-color: #fff3cd;
    }

    .text-gray-800 {
        color: #5a5c69 !important;
    }

    .fas {
        font-size: 2.5rem;
        color: #6c757d;
    }

    .icon-bg {
        background-color: rgba(0, 0, 0, 0.05);
        border-radius: 50%;
        padding: 0.75rem;
    }

    .text-xs {
        font-size: 0.875rem;
        color: #6c757d;
    }

    .font-weight-bold {
        font-weight: 700;
    }

    .text-uppercase {
        text-transform: uppercase;
    }

    .action-link {
        color: inherit;
        text-decoration: none;
    }

    .action-link:hover {
        text-decoration: underline;
    }
</style>

<div class="container mt-3">
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card card-custom border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                @Html.ActionLink("Total Course", "CourseList")
                                @*Total Task*@
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"> @ViewBag.TotalCourseCount  </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card card-custom border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                @Html.ActionLink("Total Assignment", "AssignmentList")
                                @*Total Task*@
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"> @ViewBag.TotalAssignmentCount  </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card card-custom border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Instructor
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"> @ViewBag.TotalCountOfInstrctor  </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card card-custom border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Student
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"> @ViewBag.TotalCountOfStudent  </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>