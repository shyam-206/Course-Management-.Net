@model List<CourseManagement_Model.ViewModel.UserModel>

<div class="mt-3 container">
    <div class="card">
        <div class="m-2 p-2">
            <a class="rounded-4 border-5 bg-primary-subtle px-2 py-1" href="Index"><i class="fa-solid fa-arrow-left"></i></a>
        </div>
        @if (Model == null || Model.Count() <= 0)
        {
            <div class="d-flex justify-content-center m-3 p-3 align-items-center">
                <p class="fw-bold fs-2 text-secondary">No Record Found...</p>
            </div>
        }
        else
        {
            <div class="card-body">
                <table class="table table-bordered">
                    <thead class="table-primary">
                        <tr>
                            <th>User Name</th>
                            <th>User Email</th>
                            <th>User Role</th>
                            <th>Password</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Username</td>
                                <td>@item.Email</td>
                                <td>@item.Role</td>
                                <td>@item.Password</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        }
    </div>
</div>