@model List<CourseManagement_Model.ViewModel.SubmitAssignmentModel>

<div class="container mt-3">
    <div class="card">
        <div class="m-2 p-2">
            <a class="rounded-4 border-5 bg-primary-subtle px-2 py-1" href="Index"><i class="fa-solid fa-arrow-left"></i></a>
        </div>
        @if (Model == null || Model.Count() <= 0)
        {
            <div class="d-flex justify-content-center m-3 p-3 align-items-center">
                <p class="fw-bold fs-2 text-secondary">No Record Found...</p>
            </div>
        }
        else
        {


            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>Course Title</th>
                            <th>Assignment Name</th>
                            <th>Student Name</th>
                            <th>Grade</th>
                            <th>Feedback</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CourseTitle</td>
                                <td>@item.AssignmentTitle</td>
                                <td>@item.StudentName</td>
                                <td>@item.Grade</td>
                                <td>@item.Feedback</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div>
                    <a href="Index" class="btn btn-primary btn-sm">Back To Dashboard</a>
                </div>
            </div>
        }
    </div>
</div>

