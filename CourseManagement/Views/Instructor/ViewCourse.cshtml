@model CourseManagement_Model.ViewModel.CourseModel

<style>

    .container-fluid {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card {
        max-width: 55%;
        max-height: 75%;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
        overflow: hidden;
    }

    .card-body {
        padding: 25px;
    }

    .card img {
        width: 100%;
        max-height: 25rem;
        border-bottom: 1px solid #ddd;
    }

    .modal-content {
        border-radius: 15px;
    }

    .btn-custom {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 30px;
        transition: background-color 0.3s;
    }

    .btn-custom:hover {
        background-color: #0056b3;
    }

    .btn-outline-primary, .btn-warning, .btn-success, .btn-danger {
        border-radius: 30px;
        padding: 10px 20px;
        margin-top: 10px;
    }


    .review {
        padding: 15px;
        border-bottom: 1px solid #ddd;
    }

    .review-form textarea {
        resize: none;
    }

    .star-rating {
        direction: ltr;
        font-size: 1rem;
        display: flex;
        justify-content: flex-start;
    }

    .star-rating label {
        color: #ddd;
        cursor: pointer;
    }

    .star-rating .fa-star {
        color: #ddd;
        font-size: 1em;
        cursor: pointer;
    }

    .star-rating .checked {
        color: #ffc107;
    }

    .reviews {
        margin-top: 20px;
    }

    .review {
        border: 1px solid #ddd;
        padding: 15px;
        margin-bottom: 15px;
        border-radius: 5px;
    }

    .review-text {
        line-height: 1.6;
        margin-top: 10px;
        text-align: justify;
    }
</style>

<style>
    /*position of dropdown */
    .dropdown {
        position: absolute;
        display: inline-block;
        right : 0;
    }
    
    /* provide css to background of list items */
    #list-items {
        display: none;
        position: relative;
        background-color: white;
        width: 120px;
        margin-right : 10px;
    }
    #list-items a {
        display: block;
        text-decoration: none;
        padding: 8px;
        font-size : 13px;
        text-align: center;
        color : white;
        border-bottom : 0.5px black solid;
    }
</style>
<div class="container-fluid  mt-4">
   
    <div class="card">
        <div class=" d-flex justify-content-between" style="z-index : 1;">

            <div class="m-2 p-2">
                <a class="rounded-4 border-5 bg-primary-subtle px-2 py-2" href="Index"><i class="fa-solid fa-arrow-left"></i></a>
            </div>
            <div class="dropdown">
                <div class="text-end m-2 p-1">
                    <button onclick="show_hide()" class="button btn bg-primary-subtle rounded-5 px-3 text-primary"><i class="fa-solid fa-ellipsis-vertical"></i></button>
                </div>

                <!-- dropdown list items will show when we click the drop button -->
                <div id="list-items" class="bg-primary rounded-3">
                    <a href="~/Instructor/EditCourse?CourseId=@Model.CourseId">Edit Course</a>
                    <a href="~/Instructor/DeleteCourse?CourseId=@Model.CourseId">Delete Course</a>
                    <a href="~/Instructor/UploadMaterial?CourseId=@Model.CourseId">Upload Material</a>
                    <a href="~/Instructor/AssignmentList?CourseId=@Model.CourseId">Assignments</a>
                    <a href="~/Instructor/Discussion?CourseId=@Model.CourseId" class="border-bottom-0">Discussion</a>

                </div>
            </div>
        </div>
        <img src="~/Content/CourseImages/@Model.Image" alt="Image Preview" class="img-fluid">
        <div class="card-body">
            <h2 class="card-title">@Model.Title</h2>
            <p class="card-text">@Model.Description</p>
            <div class="d-flex gap-2">
                <p class="fs-5"><strong class="text-dark">Price : </strong> <span class="text-primary fw-bolder">@Model.Price ₹</span></p>
                <p class="fs-5"><strong>Avg. Rating : </strong> @(Model.AvgRating ) / 5</p>
            </div>

            <div>

            </div>
            <div class="review-section">
                <h3 class="">Reviews</h3>
                <div class="reviews">
                    @foreach (var review in Model.Reviews)
                    {
                        <div class="review">
                            <div class="star-rating justify-content-between">
                                <div class="gap-1 d-flex mx-2 mt-1">
                                    <p class="h5">@review.StudentName</p>
                                    <p class="mx-2 h6"><small>@review.ReviewDate.ToShortDateString()</small></p>
                                </div>
                                <div>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <span class="fa fa-star mt-2 @((i <= review.Rating) ? "checked" : "")"></span>
                                    }
                                </div>

                            </div>
                            <p class="review-text">@review.ReviewText</p>
                        </div>
                    }
                </div>


            </div>
        </div>
    </div>


</div>
<script>
    function updateRating(rating) {
        document.getElementById('Rating').value = rating;
        const stars = document.querySelectorAll('.star-rating label');
        stars.forEach((star, index) => {
            if (index < rating) {
                star.style.color = '#ffc107';
            } else {
                star.style.color = '#ddd';
            }
        });
    }

    function show_hide() {
        var click = document.getElementById("list-items");
        if (click.style.display === "none") {
            click.style.display = "block";
        } else {
            click.style.display = "none";
        }
    }
</script>