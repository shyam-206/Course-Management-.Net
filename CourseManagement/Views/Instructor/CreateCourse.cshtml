@model CourseManagement_Model.ViewModel.CourseModel


<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            @if (Model != null)
            {
                <form action="EditCourse" method="post">
                    <input type="text" name="InstructorId" value="@Session["UserId"]" hidden />
                    <input type="text" name="CourseId" value="@Model.CourseId" hidden />
                    <div class="form-group mt-3">
                        <label for="Title">Title</label>
                        <input type="text" class="form-control" name="Title" placeholder="Enter Your Title" value="@Model.Title" />
                    </div>
                    <div class="form-group mt-3">
                        <label for="Description">Description</label>
                        <input type="text" class="form-control" name="Description" placeholder="Enter Your Description" value="@Model.Description" />
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-primary">Edit</button>
                    </div>
                </form>
            }
            else
            {
                <form action="CreateCourse" method="post">
                    <input type="text" name="InstructorId" value="@Session["UserId"]" hidden />
                    <div class="form-group mt-3">
                        <label for="Title">Title</label>
                        <input type="text" class="form-control" name="Title" placeholder="Enter Your Title" />
                    </div>
                    <div class="form-group mt-3">
                        <label for="Description">Description</label>
                        <input type="text" class="form-control" name="Description" placeholder="Enter Your Description" />
                    </div>
                    <div class="form-group mt-3">
                        <label for="Price">Price</label>
                        <input type="text" class="form-control" name="Price" placeholder="Enter Your Price" />
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-primary">Create</button>
                    </div>
                </form>
            }

        </div>
    </div>
</div>

