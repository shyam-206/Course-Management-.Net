@model CourseManagement_Model.ViewModel.CourseModel

<h2>CreateCourse</h2>
<div class="container">
    <div class="card">
        <div class="card-body">
            <form action="CreateCourse" method="post">
                <input type="text" name="InstructorId" value="@Session["UserId"]"/>
                <div class="form-group mt-3">
                    <label for="Title">Title</label>
                    <input type="text" class="form-control" name="Title" placeholder="Enter Your Title" />
                </div>
                <div class="form-group mt-3">
                    <label for="Description">Description</label>
                    <input type="text" class="form-control" name="Description" placeholder="Enter Your Description" />
                </div>
                <div class="mt-3">
                    <button class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

