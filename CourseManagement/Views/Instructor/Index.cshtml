@model List<CourseManagement_Model.ViewModel.CourseModel>
@{
    ViewBag.Title = "Index";
}

@if (@TempData["InstructorLogin"] != null)
{
    <script>
        toastr.success('@TempData["InstructorLogin"]')
    </script>
}

@if (@TempData["deleteCourse"] != null)
{
    <script>
        toastr.info('@TempData["deleteCourse"] ')
    </script>
}
<style>
    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .btn-disabled {
        background-color: #6c757d;
        border-color: #6c757d;
        cursor: not-allowed;
    }
</style>
<div class="container-fluid mt-3">
    <div class="d-flex gap-2">
        <a href="CreateCourse" class="btn btn-primary btn-sm">Create Course</a>
        <a href="ReviewAssignment" class="btn btn-primary btn-sm">Review Assignment</a>
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover">
                <thead class="text-primary">
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Action</th>
                        <th>Upload Material</th>
                        <th>Assginment</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {

                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td class="text-wrap">@item.Description</td>
                                <td>
                                    <div class="d-flex">
                                        <a href="~/Instructor/EditCourse?CourseId=@item.CourseId" class="btn btn-info mx-2 btn-sm text-wrap">Edit</a>
                                        <a class="btn btn-danger mx-2 btn-sm text-wrap" href="~/Instructor/DeleteCourse?CourseId=@item.CourseId">Delete</a>
                                    </div>
                                </td>
                                <td>
                                    <a href="~/Instructor/UploadMaterial?CourseId=@item.CourseId" class="btn btn-success mx-2 btn-sm text-wrap">Upload</a>
                                </td>
                                <td>
                                    <a href="~/Instructor/AssignmentList?CourseId=@item.CourseId" class="text-dark">Assignment List</a>
                                </td>
                            </tr>
                        }

                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

