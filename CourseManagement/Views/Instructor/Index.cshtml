@model List<CourseManagement_Model.ViewModel.CourseModel>
@{
    ViewBag.Title = "Index";
}


<div class="container mt-5">
    <div class="d-flex">
        <a href="CreateCourse" class="btn btn-primary">Create Course</a>
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <td>Title</td>
                        <td>Description</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {

                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>
                                    <div class="d-flex">
                                        <a class="btn btn-info mx-2 btn-sm">Edit</a>
                                        <a class="btn btn-danger mx-2 btn-sm">Delete</a>
                                        <a href="~/Instructor/UploadMaterial?CourseId=@item.CourseId" class="btn btn-success mx-2 btn-sm">Upload material</a>
                                    </div>
                                </td>
                            </tr>
                        }

                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

