@model CourseManagement_Model.ViewModel.MaterialModel


<div class="container mt-5">
    <div class="card">
        <div class="m-2 p-2">
                <a class="rounded-4 border-5 bg-primary-subtle px-2 py-1" href="~/Instructor/ViewCourse?CourseId=@ViewBag.CourseId"><i class="fa-solid fa-arrow-left"></i></a>
            </div>
        <div class="card-body">
            
            <form action="UploadMaterial" method="post" enctype="multipart/form-data">
                <input type="text" name="CourseId" value="@ViewBag.CourseId" hidden />
                <div class="form-group mt-3">
                    <label for="Title">Title</label>
                    <input type="text" class="form-control" name="Title" placeholder="Enter Your Title" />
                </div>
                <div class="form-group mt-3">
                    <label for="FilePath">Description</label>
                    <input type="File" class="form-control" name="FilePath" multiple />
                </div>
                <div class="mt-3">
                    <button class="btn btn-success">Upload Material</button>
                </div>
            </form>
        </div>
    </div>
</div>


